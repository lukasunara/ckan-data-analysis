<div class="card align-items-center justify-content-center bg-light rounded-3 m-1 w-100">
    <h2 class="class-title">Findability</h2>
    <div class="card-body">
        <p class="text-center">These indicators show how easy it is for people and machines to find data</p>
        <div class="d-flex flex-row flex-wrap justify-content-center">
            <div><canvas id="identificationChart" class="smaller-chart"></canvas></div>
            <div><canvas id="keywordsChart" class="smaller-chart"></canvas></div>
            <div><canvas id="categoriesChart" class="smaller-chart"></canvas></div>
            <div><canvas id="stateChart" class="smaller-chart"></canvas></div>
        </div>
    </div>
    <% if(objectData.result.findChart.missing_params.size > 0 && !objectData.result.findChart.missing_params.has('')) { %>
    <div>Missing parameters are:
        <ul class="list-group list-group-flush list-group-horizontal">
            <% objectData.result.findChart.missing_params.forEach(function(param) { %>
                <li class="list-group-item bg-light"><span class="fw-bold"><%= param %></span></li>
            <% }) %>
        </ul>
    </div>
    <% } %>
</div>

<script type="module" src="/scripts/charts/findability.js"></script>